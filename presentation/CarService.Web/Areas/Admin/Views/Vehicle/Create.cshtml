@model CreateVehicleVM

@{
    ViewData["Title"] = "Новый автомобиль";
}

<h4>Добавление нового автомобиля</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Vehicle" asp-action="Create" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ModelName" class="control-label"></label>
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="EngineId" class="control-label"></label>
                <select asp-for="EngineId" asp-items="ViewBag.Engines" class="form-select" on aria-label="Default select example">
                    <option disabled selected>Выберите или создайте двигатель</option>
                </select>                
            </div>
            <div class="form-group form-check mb-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AirConditioning" /> @Html.DisplayNameFor(model => model.AirConditioning)
                </label>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}