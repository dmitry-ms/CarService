@model IEnumerable<VehicleInfoVM>

@{
    ViewData["Title"] = "Автомобили";
}

<h1>Доступные автомобили</h1>

<div>
    <a class="btn btn-primary mr-2" asp-action="Create">Добавить новый автомобиль</a>
    <a class="btn btn-outline-info mr-2" asp-controller="Engine" asp-action="Index">Двигатели</a>
    <a class="btn btn-outline-info mr-2" asp-controller="Transmission" asp-action="Index">Коробки передач</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Engine.EngineType) @Html.DisplayNameFor(model => model.Engine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirConditioning)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine.EngineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirConditioning)
            </td>
            <td>
                <a class="btn btn-sm btn-info mr-1" asp-action="Details" asp-route-userid="@item.Id"> Подробней</a>
                <a class="btn btn-sm btn-warning mr-1" asp-action="Edit" asp-route-userid="@item.Id"> Редактировать</a>
                <a class="btn btn-sm btn-danger mr-1" asp-action="Remove" asp-route-userid="@item.Id"> Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
