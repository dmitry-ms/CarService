@model CreateRoboticTransmissionVM

@{
    ViewData["Title"] = "Новая коробка передач";
}


<h4>Добавление новой коробки передач</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Transmission" asp-action="CreateRoboticTransmission" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="DriveUnit" class="control-label"></label>
                <select asp-for="DriveUnit" asp-items="Html.GetEnumSelectList<DriveUnitVM>()" class="form-select">
                    <option disabled selected>Выберите привод</option>
                </select>
                <span asp-validation-for="DriveUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="NumberOfGears" class="control-label"></label>
                <input asp-for="NumberOfGears" class="form-control" />
                <span asp-validation-for="NumberOfGears" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
