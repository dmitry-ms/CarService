@model VariatorTransmissionVM

@{
    ViewData["Title"] = "Панель администратора";
}

<h4>Добавление новой коробки передач</h4>
<hr />
<div class="row justify-content-center mt-2">
    <div class="col-md-5">
        <form method="post" asp-controller="Transmission" asp-action="CreateVariatorTransmission"
              asp-route-returnController=@ViewBag.returnController asp-route-returnAction=@ViewBag.returnAction asp-antiforgery="true">
            
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="DriveUnit" class="control-label"></label>
                <select asp-for="DriveUnit" asp-items="Html.GetEnumSelectList<DriveUnitVM>()" class="form-select">
                    <option disabled selected>Выберите привод</option>
                </select>
                <span asp-validation-for="DriveUnit" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Создать" class="btn btn-primary" />
                @if (ViewBag.returnController != null || ViewBag.returnAction != null)
                {
                    <a class="btn btn-outline-danger float-end" asp-controller="@ViewBag.returnController"
                       asp-action="@ViewBag.returnAction">Назад</a>
                }
                else
                {
                    <a class="btn btn-outline-danger float-end" asp-action="Index">Вернуться к списку</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
