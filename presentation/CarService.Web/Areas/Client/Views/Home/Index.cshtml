@model IEnumerable<CarService.Web.Models.ClientCarVM>

@{
    ViewData["Title"] = "Ваш гараж";
}

<div class="d-flex justify-content-between mb-5">
    <div><h3>Ваш гараж</h3></div>
    <div>
        <a class="btn btn-success btn-lg mr-2" asp-action="AddCar">Добавить автомобиль</a>
    </div>
</div>


@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    @*<img src="" class="card-img-top" alt="...">*@
                    <div class="card-body">
                        <button class="btn btn-outline-dark float-end"><img class="me-2" style="width:20px" src="~/img/edit.png" />Изменить</button>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.BrandName) @Html.DisplayFor(modelItem => item.ModelName)</h5>                        
                        <p class="card-text">@Html.DisplayNameFor(m => item.MileageKM) @Html.DisplayFor(modelItem => item.MileageKM)км</p>
                        <a asp-controller="Service" asp-action="GetAllAvailableServicesForCar" asp-route-carId="@item.Id" class="btn btn-outline-primary stretched-link float-end">Сервис</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="row justify-content-center mt-5 p-5">
        <div class="col-6 text-center">
            <h2>У вас пока нету автомобилей, <a class="nav-link" asp-action="AddCar">нажмите чтобы добавить.</a></h2>
        </div>
    </div>
}
